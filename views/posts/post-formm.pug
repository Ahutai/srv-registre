extends ../layoutcc.pug 

block content
  script(src="/javascripts/posts/loaderr.js")
  div(class="divmform")
    div(class="divc1form")
      include ../includes/mod
    div(class="divc2form")
      form(class="formm" method="post" action= post._id ? "/posts/update/" + post._id : "/posts")
        div(class="divc3form")
          div(class="divc4form")
            input(type="text" class="inputform" name="content" placeholder="Name")
          div(class="divc5form") 
            input(type="submit" value="Added" class="inputmform")
            div(class="loaderr")
            if errors
              ul(class="ulerrorform")
                each error in errors 
                  li(class="lierrorform")= error