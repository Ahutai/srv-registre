extends ../layouti.pug

block content 
  script(src="/javascripts/posts/loaderr.js")
  div(class="divmform")
    div(class="divc1form")
      include ../includes/create
    div(class="divc2formuser")
      form(class="formmuser" method="post" action= "/shared/createfoldernivi/" + post._id) 
        div(class="divc3formuser") 
          div(class="divc4formuser")
            input(class="inputusername" type="text" name="name" placeholder="Name")
          div(class="divc5form") 
            input(type="submit" value="Valider" class="inputmform")
            div(class="loaderr")
            if errorss
              ul(class="ulerrorform")
                each error in errorss 
                  li(class="lierrorform")= error