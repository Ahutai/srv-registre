extends ../layoutch.pug 

block content 
  div(class="divmform")
    div(class="divc1form")
      include ../includes/create
    div(class="divc2formuser")
      form(class="formmuser" method="post" action= "/posts/updatee/" + posts._id) 
        div(class="divc3formuser") 
          div(class="divc4formuser")
            input(class="inputusername" type="text" name="name" placeholder="Name")
          div(class="divc4formuser")
            input(class="inputemail" type="text" name="adresseip" placeholder="Adresse IP")
          div(class="divc4formuser")
            input(class="inputpassword" type="text" name="redirect" placeholder="Redirection")
          div(class="divc4formuser")
            input(class="inputupdown" type="text" name="updown" placeholder="Up Down")
          div(class="divc5form") 
            input(type="submit" value="Valider" class="inputmform" id="inpt")
            div(class="loaderr")
            if errorsss
              ul(class="ulerrorform")
                each error in errorsss
                  li(class="lierrorform")= error