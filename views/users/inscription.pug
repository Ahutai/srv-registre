extends ../layout.pug 

block content 
  div(class="divmform")
    div(class="divc1form")
      //- img(class="infotechh" src="/images/infotech.png")
    div(class="divc2formuser")
      form(class="formmuser" method="post" action="/users/signup")
        div(class="divc3formuser") 
          div(class="divc4formuser")
            input(class="inputusername" type="text" name="username" placeholder="Username")
          div(class="divc4formuser")
            input(class="inputemail" type="email" name="email" placeholder="Email")
          div(class="divc4formuser")
            input(class="inputpassword" type="password" name="password" placeholder="Password")
          div(class="divc5form") 
            input(type="submit" value="Valider" class="inputmformuser")
            if errors 
              ul(class="ulerrorform")
                each error in errors 
                  li(class="lierrorform")= error